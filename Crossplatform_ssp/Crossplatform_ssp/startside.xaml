<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crossplatform_ssp.startside"
             Title="Startside"
             BackgroundColor="White">
  
    <StackLayout>
        <Label x:Name="lbl_NoInternet" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Red"/>
        <StackLayout Orientation="Horizontal" >
            <Button x:Name="startCubeBtn" BackgroundColor="White" Image="cubeLogo"/>
            <Button x:Name="startSSPBtn" BackgroundColor="White" Image="sspLogo" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" >
            <Button x:Name="startTetrizBtn" BackgroundColor="White" Image="tetrizLogo"/>
            <Button x:Name="startPubBtn" BackgroundColor="White" Image="folderLogo"/>
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand">
            <Image Source="sspstartny"  />
        </StackLayout>
    </StackLayout>
   


</ContentPage>

