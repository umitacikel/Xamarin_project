<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crossplatform_ssp.publikationer"
             Title="Publikationer"
             BackgroundColor="WhiteSmoke">
    <ListView ItemsSource="{Binding .}" x:Name="listviewPubli" HasUnevenRows="true" SeparatorVisibility="None"
               IsPullToRefreshEnabled="True" Refreshing="listview_Refreshing">
        <ListView.ItemTemplate>
            <DataTemplate >
                <ViewCell >
                    <ViewCell.View>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding ForsideBillede}" HorizontalOptions="FillAndExpand" HeightRequest="150" WidthRequest="150" Aspect="AspectFit"/>
                            <StackLayout Spacing="5" Padding="20" >
                                <Label Text="{Binding Navn}"  FontSize="16" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>



</ContentPage>